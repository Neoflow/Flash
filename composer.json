{
  "name": "neoflow/flash-messages",
  "description": "Flash messages service for Slim 4 and similar frameworks or apps.",
  "license": "MIT",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Jonathan Nessier",
      "homepage": "https://www.neoflow.ch"
    }
  ],
  "autoload": {
    "psr-4": {
      "Neoflow\\FlashMessages\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Neoflow\\FlashMessages\\Test\\": "tests/"
    }
  },
  "scripts": {
    "run php-cs-fixer": "php-cs-fixer fix",
    "run php-cs-fixer dry": "php-cs-fixer fix --dry-run",
    "run phpunit": "phpunit --configuration phpunit.xml.dist"
  },
  "require": {
    "php": "^7.3",
    "psr/http-server-middleware": "^1.0"
  },
  "require-dev": {
    "psr/http-message": "^1.0",
    "friendsofphp/php-cs-fixer": "^2.16",
    "middlewares/utils": "^3.1",
    "phpunit/phpunit": "^9.2",
    "php-coveralls/php-coveralls": "^2.2",
    "slim/psr7": "^1.1",
    "pds/skeleton": "^1.0"
  }
}
